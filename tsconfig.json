// FILE: tsconfig.json

{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "anchor/*": ["../../anchor/*"],
      "@/*": ["src/*"],
      "@coral-xyz/anchor": ["node_modules/@coral-xyz/anchor"],
      "@stake-lib/*": ["eco-subsystem/complementary-modules/getStakeActivation/js/src/*"],
      "@solana/web3.js": ["node_modules/@solana/web3.js"],
      "@anaheim/anchor-client": ["../../packages/anchor-client/src/index.ts"],
      "@vendor/*": ["vendor/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  // Your "include" and "exclude" arrays are preserved exactly as they were.
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/.pnpm/vitest@3.2.3_@types+node@24.0.10/node_modules/vitest/globals.d.ts",
    "node_modules/.pnpm/vitest@3.2.3_@types+node@24.0.10/node_modules/vitest/globals.d.ts",
    "node_modules/.pnpm/vitest@3.2.3_@types+node@24.0.10/node_modules/vitest/globals.d.ts"
  ],
  "exclude": ["node_modules"]
}